<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/beritain_bg_item_category"
        app:layout_constraintBottom_toTopOf="@id/tv_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_category"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:src="@drawable/ic_business"
        app:layout_constraintStart_toStartOf="@id/bg_image"
        app:layout_constraintTop_toTopOf="@id/bg_image"
        app:layout_constraintEnd_toEndOf="@id/bg_image"
        app:layout_constraintBottom_toBottomOf="@id/bg_image"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Business"
        android:textColor="@color/main_theme_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bg_image"
        app:layout_constraintStart_toStartOf="@id/bg_image"
        app:layout_constraintTop_toBottomOf="@id/bg_image" />

</androidx.constraintlayout.widget.ConstraintLayout>